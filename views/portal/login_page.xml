<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <template id="login_page">
            <html>
                <head>
                    <meta charset="UTF-8"/>
                    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
                    <title>Login Page</title>
                    <link rel="stylesheet" type="text/css" href="/Web_tuyen_sinh_MiKi/static/assets/css/styles.css"/>
                    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

                </head>
                <div class="container">
                    <img src="/Web_tuyen_sinh_MiKi/static/assets/img/logo.png" alt="Logo" class="logo"/>
                    <div class="column column1">
                        <img src="/Web_tuyen_sinh_MiKi/static/assets/img/background.jpg" alt="Hình ảnh"/>
                    </div>
                    <div class="column column2">
                        <div class="header">
                            <h1>TRƯỜNG THPT NGUYỄN THỊ MINH KHAI</h1>
                            <h3>Địa chỉ: 275 Điện Biên Phủ, P.Võ Thị Sáu, Q.3, TP.HCM <br/>
                                Điện thoại: (028)39330801<br/>
                                Email: thpt.hcm@minhkhai.edu.vn<br/>
                                Website: thptnguyenthiminhkhai.hcm.edu.vn</h3>

                        </div>

                        <form action="/information_page">

                            <div class="login-form">
                                <h2>HỆ THỐNG ĐIỀN THÔNG TIN NHẬP HỌC</h2>
                                <h4>Số báo danh</h4>
                                <input type="text" placeholder="Nhập số báo danh" id="sbd" name="sbd"/>
                                <h4>Mã số học sinh</h4>
                                <input type="password" placeholder="Mã số học sinh" id="mhs" name="mhs"/>
                                <button type="submit" class="btn_login_page">LOG IN</button>

                            </div>
                            <div class="info-section">
                                <div class="info-box" style="display: none;">
                                    <h5>Họ và tên:</h5>
                                    <p id="result_name">Thông tin người dùng sẽ hiển thị ở đây</p>
                                    <h5>Ngày sinh:</h5>
                                    <p id="result_dob">Thông tin người dùng sẽ hiển thị ở đây</p>
                                <input type="submit"/>

                                </div>
                                <div class="empty-box" style="display: none;">
                                    <p>Không có học sinh này</p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            <script src="/Web_tuyen_sinh_MiKi/static/assets/js/login_page.js"/>

            </html>



        </template>
    </data>
</odoo>