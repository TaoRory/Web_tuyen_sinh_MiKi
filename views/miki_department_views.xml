<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="miki_department_form_view" model="ir.ui.view">
            <field name="name">Web_tuyen_sinh_MiKi.miki_department.form</field>
            <field name="model">miki.department</field>
            <field name="arch" type="xml">
                <form string="Department">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="major_ids"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="miki_department_tree_view" model="ir.ui.view">
            <field name="name">Web_tuyen_sinh_MiKi.miki_department.tree</field>
            <field name="model">miki.department</field>
            <field name="arch" type="xml">
                <tree string="Department">
                    <field name="name"/>
                    <field name="major_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="miki_department_search_view" model="ir.ui.view">
            <field name="name">Web_tuyen_sinh_MiKi.miki_department.search</field>
            <field name="model">miki.department</field>
            <field name="arch" type="xml">
                <search string="Department" >
                    <field name="name"/>
                    <field name="major_ids"/>
                </search>
            </field>
        </record>

        <record id="miki_department_act_window" model="ir.actions.act_window">
            <field name="name">Department</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">miki.department</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Department.
                </p>
            </field>
        </record>

        <menuitem name="Department" id="miki_department_menu" parent="miki_student_type_menu" action="miki_department_act_window"/>

    </data>
</odoo>