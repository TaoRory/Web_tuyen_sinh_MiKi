        <record id="miki_ward_tree_view" model="ir.ui.view">
            <field name="name">Web_tuyen_sinh_MiKi.miki_ward.tree</field>
            <field name="model">miki.ward</field>
            <field name="arch" type="xml">
                <tree string="Ward">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="name_with_type"/>
                    <field name="district_id"/>
                </tree>
            </field>
        </record>

        <record id="miki_ward_search_view" model="ir.ui.view">
            <field name="name">Web_tuyen_sinh_MiKi.miki_ward.search</field>
            <field name="model">miki.ward</field>
            <field name="arch" type="xml">
                <search string="ward">
                    <group expand="1" string="Group By">
                        <filter string="Type" name="type" domain="[]"
                                context="{'group_by':'type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="miki_ward_act_window" model="ir.actions.act_window">
            <field name="name">ward</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">miki.ward</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ward.
                </p>
            </field>
        </record>

        <menuitem name="Ward" id="miki_ward_menu"  action="miki_ward_act_window"/>

    </data>
</odoo>